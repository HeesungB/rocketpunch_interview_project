<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="item"
            type="com.example.rocketpunch_interview.model.MessageChannel" />

        <variable
            name="viewModel"
            type="com.example.rocketpunch_interview.ui.message.MessageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/row_message_channel_top_horizontal_guide_line_begin"
            />

        <ImageView
            android:id="@+id/user_profile"
            android:layout_width="@dimen/row_message_channel_user_profile_width"
            android:layout_height="@dimen/row_message_channel_user_profile_height"
            android:layout_marginLeft="@dimen/row_message_channel_user_profile_left_margin"
            android:layout_marginStart="@dimen/row_message_channel_user_profile_left_margin"
            app:layout_constraintTop_toBottomOf="@id/top_guideline"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_account_box_24px" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/message_user_info_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/row_message_channel_user_info_vertical_guide_line_begin"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/top_guideline"
            app:layout_constraintStart_toEndOf="@+id/message_user_info_guideline"
            android:textStyle="bold"
            android:textSize="@dimen/row_message_channel_user_name_text_size"
            android:text="@{item.opponentUser.name}"
            />

        <TextView
            android:id="@+id/user_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/user_name"
            app:layout_constraintStart_toEndOf="@id/message_user_info_guideline"
            android:text="@{item.opponentUser.description}"
            />

        <TextView
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/user_description"
            app:layout_constraintStart_toEndOf="@id/message_user_info_guideline" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/message_status_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/row_message_channel_message_status_vertical_guide_line_end"/>

        <TextView
            android:id="@+id/message_time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/top_guideline"
            app:layout_constraintEnd_toEndOf="@id/message_status_guideline"
            android:text="@{item.currentChat.dateTime}"
            />

        <TextView
            android:id="@+id/message_unread_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/row_message_channel_unread_count_padding"
            app:layout_constraintTop_toBottomOf="@+id/message_time_ago"
            app:layout_constraintEnd_toEndOf="@id/message_status_guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/message_count_round_corner"
            android:textColor="@color/colorWhite"
            android:text="@{Integer.toString(item.unreadChatCount)}"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
